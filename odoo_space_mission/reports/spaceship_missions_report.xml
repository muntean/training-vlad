<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spaceship_missions_report" model="ir.actions.report">
        <field name="name">Spaceship Missions Report</field>
        <field name="model">space.ship</field>
        <field name="report_type">qweb-html</field>
        <field name="report_file">odoo_space_mission.report_spaceship_missions</field>
        <field name="report_name">odoo_space_mission.report_spaceship_missions_document</field>
        <field name="binding_type">report</field>
    </record>
    
    <template id="report_spaceship_missions_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="spaceship">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1 t-field="spaceship.model" class="mt16"/>
                        <div class="row mt32 mb32" id="spaceship_info">
                            <div class="col-auto mw-100 mb-2">
                                <strong>Crew type: </strong>
                                <span t-field="spaceship.crew_type"/>
                            </div>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Maximum crew members supported: </strong>
                                <span t-field="spaceship.crew_size"/>
                            </div>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Width: </strong>
                                <span t-field="spaceship.width"/>
                                <strong>Length: </strong>
                                <span t-field="spaceship.length"/>
                            </div>
                        </div>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th name="th_name">Name</th>
                                    <th name="th_start_date">Start Date</th>
                                    <th name="th_end_date">End Date</th>
                                    <th name="th_crew_size">Crew size</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="spaceship.space_mission_ids" t-as="mission">
                                    <tr>
                                        <td t-if="mission.name" name="td_name">
                                            <span t-field="mission.name"/>
                                        </td>
                                        <td t-if="mission.start_date" name="td_start_date">
                                            <span t-field="mission.start_date"/>
                                        </td>
                                        <td t-if="mission.end_date" name="td_end_date">
                                            <span t-field="mission.end_date"/>
                                        </td>
                                        <td name="td_start_date">
                                            <t t-foreach="mission.crew_ids" t-as_size="size">
                                                <span t-esc="size"/>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>