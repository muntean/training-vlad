<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="space_mission_view_form" model="ir.ui.view">
        <field name="name">space.mission.view.form</field>
        <field name="model">space.mission</field>
        <field name="arch" type="xml">
            <form string="Mission Form">
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="spaceship_id"/>
                            <field name="amount_of_fuel_needed"/>
                            <field name="number_of_engines"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Crew">
                            <field name="crew_ids"/>
                        </page>
<!--                         <page string="Crew2">
                            <field name="crew2_ids"/>
                        </page> -->
                    </notebook>
                </sheet>
                
            </form>
        </field>
    </record>
    
    <record id="space_mission_view_tree" model="ir.ui.view">
        <field name="name">space.mission.view.tree</field>
        <field name="model">space.mission</field>
        <field name="arch" type="xml">
            <tree string="Space Mission List">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="spaceship_id"/>
            </tree>
        </field>
    </record>
    
    <record id="space_mission_view_graph" model="ir.ui.view">
        <field name="name">space.mission.view.graph</field>
        <field name="model">space.mission</field>
        <field name="arch" type="xml">
            <graph string="Graph View">
                <field name="name"/>
                <field name="amount_of_fuel_needed" type="measure"/>
                <field name="number_of_engines" type="measure"/>
            </graph>
        </field>        
    </record>
    
</odoo>