<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spaceship_view_form" model="ir.ui.view">
        <field name="name">spaceship.view.form</field>
        <field name="model">space.ship</field>
        <field name="arch" type="xml">
            <form string="Spaceship Form">
                <sheet>
                    <h1><field name="model"/></h1>
                    <group>
                        <group>
                            <field name="crew_type"/>
                            <field name="crew_size"/>
                            <field name="width"/>
                            <field name="length"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Space Missions">
                            <field name="space_mission_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="spaceship_view_tree" model="ir.ui.view">
        <field name="name">spaceship.view.tree</field>
        <field name="model">space.ship</field>
        <field name="arch" type="xml">
            <tree string="Spaceship List">
                <field name="model"/>
                <field name="crew_type"/>
                <field name="crew_size"/>
            </tree>
        </field>
    </record>
    
    <record id="space_mission_view_form" model="ir.ui.view">
        <field name="name">space.mission.view.form</field>
        <field name="model">space.mission</field>
        <field name="arch" type="xml">
            <form string="Mission Form">
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="spaceship_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Crew">
                            <field name="crew_ids"/>
                        </page>
                    </notebook>
                </sheet>
                
            </form>
        </field>
    </record>
    
    <record id="spaceship_view_tree" model="ir.ui.view">
        <field name="name">space.mission.view.tree</field>
        <field name="model">space.mission</field>
        <field name="arch" type="xml">
            <tree string="Space Mission List">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="spaceship_id"/>
            </tree>
        </field>
    </record>
    
    <record id="spaceship_view_search" model="ir.ui.view">
        <field name="name">spaceship.view.search</field>
        <field name="model">space.ship</field>
        <field name="arch" type="xml">
            <search>
                <field name="model"/>
                <field name="description"/>
            </search>
        </field>
    </record>
    
    
</odoo>